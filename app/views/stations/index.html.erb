<article>
  <div class="banner">
    <div class="container">
      <h1>BES 電池交換站點</h1>
    </div>    
    </div>
    
    <div id="crumb">
        <section class="container" >
          <ol class="breadcrumb">
            <li><%= link_to "首頁", root_path %></li>
            <li class="active">BES 站點查詢</li>
          </ol>
        </section>
    </div>
    
    <section class="spot">
    <div class="container">
        <div id="spot01">
            <h1>BES 電池交換站點查詢</h1>
            <%= search_form_for @q, url: search_stations_path, class: "form-inline quick-search-form" , method: :post, remote: true do |f| %>
            
            <div class='form-group' style='display:none;'>
              <%= f.select :country_eq, options_from_collection_for_select(@countries ,
                  "id", "name" ) , id: 'q_country_eq', class: "form-control" %>
            </div>
            <div class='btn-group dropdown-toggle'>
              <%= f.select :city_eq, options_from_collection_for_select(@cities ,
                  "id", "name" ) , id: 'q_city_eq' %>
            </div>
            <div class='btn-group dropdown-toggle'>
              <%= f.select :district_eq, options_from_collection_for_select(@districts ,
                  "id", "name" ) ,{:prompt => '-- 請選擇 --'}, id: 'q_district_eq' %>
            </div>
            <%= f.submit('搜尋' , id: "quick-search", class: "btn") %>
            <% end %>
        </div>

        <div id="spot02">
          <div id="result"></div>
        </div>

        <div id="qrcode">
          <h3>也可透過 App 查詢</h3>
          <div><h4>適用於android</h4>
          <img src="/images/img_app_android2.gif" width="110">
          </div>
          <!--<div><h4>適用於android</h4>
          <img src="/images/img_app_android2.gif" width="110">
          </div>-->
        </div>

        <iframe id="googleMap" src="https://mapsengine.google.com/map/embed?mid=zzLrcbgIym4Y.kCwa_hAQXmwc"  frameborder="0" style="border:0"></iframe>

    </div>
    </section>
</article>
