<% @categories.each do |category| %>
  <h1><%= category.name %></h1>
  <% category.vehicles.where(status: 'enable').limit(3).each do |vehicle| %>
  <div style='float:left;'>
    NAME:<%= link_to vehicle.name, vehicle_path(vehicle) %><br>
    DESCRIPTION:<%= vehicle.description %><br>
  </div>
  
  <div style='float:left;'>VehiclePhotoGallery <br>
    <%= render 'layouts/show_by_type', target: vehicle, target_title: 'åœ–', type: 'VehicleCover' %>
  </div>

  <div style=' clear: both;'></div>
  <hr>
  <% end %>
<% end %>