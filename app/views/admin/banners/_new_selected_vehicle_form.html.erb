
  <header>
  <h2 class="left">明星商品<span> / 首頁管理</span></h2>
  <nav class="left"></nav>      
  </header>
  <article>
    <div class="form">
      <%= form_for(@selected_vehicle, :url => admin_selected_vehicles_path(), html: { id: "newthisbanner" } ) do |f| %>
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="7%">商品：</td>
            <td width="31%">
             <%= f.select :related_product_id, options_for_select(@vehicles.collect { |vehicle|
      [vehicle.name, vehicle.id] }, @selected_vehicle.related_product_id), {}, { id: 'vehicle_select' } %>

              <%# f.select :related_product_id, options_for_select(@vehicles.collect { |vehicle|
        [vehicle.name, vehicle.id] }, @selected_vehicle.related_product_id), {}, { id: 'vehicle_select' } %>
            </td>
            <td width="2%">&nbsp;</td>
            <td width="7%">顯示：</td>
            <td width="53%">
              <%= f.check_box :status, { class: 'checkbox'  }, "enable", "disable" %> 是
            </td>
          </tr>
        </table>
      <% end %>
    </div>

    <div class="button">
      <%= link_to image_tag("/images/admin/left.png")+"返回", admin_selected_vehicles_path(), class: "left" %>
      <a href="javascript: document.getElementById('newthisbanner').submit();" class="right highlight" data-no-turbolink = true >儲存
        <img src="<%= image_path("/images/admin/up.png") %>">
        </a>
    </div>

  </article>
