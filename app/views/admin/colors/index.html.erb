<header>
  <h2 class="left">編輯產品</h2>
  <nav class="left">
    <%= link_to "Basic", edit_admin_category_vehicle_path(@vehicle.category, @vehicle)%>
    <%= link_to "Specs", admin_category_vehicle_specs_path(@vehicle.category, @vehicle)%>
    <%= link_to "Features", admin_category_vehicle_features_path(@vehicle.category, @vehicle)%>
    <%= link_to "Colors", admin_category_vehicle_colors_path(@vehicle.category, @vehicle)%>
    <%= link_to "Accessories", admin_category_vehicle_accessories_path(@vehicle.category, @vehicle)%>
    <%= link_to "VehicleSlider", admin_category_vehicle_slider_path(@vehicle.category, @vehicle)%>
    <%= link_to "VehicleDMFile", admin_category_vehicle_dm_path(@vehicle.category, @vehicle)%>
    <%= link_to "VehiclePhotoGallery", admin_category_vehicle_photo_path(@vehicle.category, @vehicle)%>
  </nav>
</header>
<br>
<%= link_to 'NEW', new_admin_category_vehicle_color_path(params[:category_id], params[:vehicle_id]) %><br><br><br>

<% @colors.each do |color| %>
  <%= color.name %> == <%= color.hexcode %> <div style='width:50px;height:50px;background:#<%= "#{color.hexcode}"%>;'>&nbsp;</div>
  [<%= link_to 'edit', edit_admin_category_vehicle_color_path(params[:category_id], params[:vehicle_id],color) %>| 
   <%= link_to("刪除", admin_category_vehicle_color_path(params[:category_id], params[:vehicle_id],color), :method => :delete, :data => {:confirm => "確定刪除？"}, class: "delete") %>
  ]
  <br>
<% end %>
<br>
<%= link_to 'return' ,admin_category_vehicle_path(params[:category_id], params[:vehicle_id]) %>