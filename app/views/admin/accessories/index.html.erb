<header>
  <h2 class="left">車款介紹</h2>
  <nav class="left">
    <%= link_to "簡介", edit_admin_category_vehicle_path(@vehicle.category, @vehicle) %>
    <%= link_to "輪播", admin_category_vehicle_slider_path(@vehicle.category, @vehicle) %>
    <%= link_to "車色", admin_category_vehicle_colors_path(@vehicle.category, @vehicle) %>
    <%= link_to "特色", admin_category_vehicle_features_path(@vehicle.category, @vehicle) %>
    <%= link_to "規格", admin_category_vehicle_specs_path(@vehicle.category, @vehicle) %>
    <%= link_to "配件", admin_category_vehicle_accessories_path(@vehicle.category, @vehicle), class: 'active'%>
    <%= link_to "型錄", admin_category_vehicle_dm_path(@vehicle.category, @vehicle)%>
    <%= link_to "產品圖", admin_category_vehicle_photo_path(@vehicle.category, @vehicle)%>
  </nav>
</header>
<article>
  <div class="hgroup">
     <div class="button right">
      <%= link_to new_admin_category_vehicle_accessory_path(params[:category_id], params[:vehicle_id]), class: 'right highlight' do %>   
        建立項目<img src="/images/admin/add.png">
      <% end %>
     </div>
  </div>
  <div class="list">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <% @accessories.each do |accessory| %>
        <tr>
          <td width="4%" class="icon"><img src="/images/admin/li.png"></td>
          <td width="78%">
            <% if accessory.type == "OptionalAccessory" %>
            [選配]
            <% elsif accessory.type == "ComplimentaryAccessory" %>
            [附贈]
            <% end %>
            <%= accessory.title %>
          </td>
          <td width="18%">
            <div class="tool">
              <%= link_to '', edit_admin_category_vehicle_accessory_path(params[:category_id], params[:vehicle_id],accessory), class: 'edit' %>
              <%= link_to "", admin_category_vehicle_accessory_path(params[:category_id], params[:vehicle_id],accessory), :method => :delete, :data => {:confirm => "確定刪除？"}, class: "delete" %>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</article>