<%# VAR %>
<%# target_title: display name for user %>
<%# target: object %>
<%# type: gallery type %>
<div class="list">
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <% target.galleries.select{ |v| v['type'] == type }.each do |attach| %>
      <tr>
        <td width="9%">檔案：</td>
        <td width="73%">
          <%= link_to "#{attach.file_name}", attach.attachment.url, target: '_blank' %>
        </td>
        <td width="18%">
          <div class="tool">
            <%= link_to '', admin_gallery_path(attach.id), method: :delete, data: { confirm: '確認刪除?' }, class: 'delete', title: '刪除' %>
          </div>
        </td>
      </tr>       
    <% end %>
  </table>
</div>