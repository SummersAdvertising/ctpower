<%# VAR %>
<%# target_title: display name for user %>
<%# target: object %>
<%# type: gallery type %>

<div class="form">
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <td width="7%"><%= target_title %></td>
      <td width="93%">        
        <% target.galleries.select{ |v| v['type'] == type }.each do |attach| %>
          <div class="thumb">
            <image src=<%= "#{attach.attachment.url}" %> />
            <%= link_to '', admin_gallery_path(attach.id), method: :delete, data: { confirm: '確認刪除?' }, class: 'delete', title: '刪除' %>
          </div>
        <% end %>
      </td>
    </tr>
  </table>
</div>