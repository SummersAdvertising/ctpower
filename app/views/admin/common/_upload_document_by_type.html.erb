<%# VAR %>
<%# target_title: display name for user %>
<%# target: object %>
<%# target_controller: controller name %>
<%# type: gallery type %>

<div class="form">
  
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <td width="7%"></td>
      <td width="93%">
        <%= text_field_tag 'filename', nil, placeholder: '附件名稱', class: 'text' %>
      </td>
    </tr>
    <tr>
      <td width="7%"><%= target_title %></td>
      <td width="93%">
        <!-- COVER UPLOAD -->
        <%= file_field_tag :attachment, class: 'file' %>
      </td>
    </tr>
  </table>
  
</div>