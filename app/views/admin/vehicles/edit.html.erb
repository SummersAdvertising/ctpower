<script type="text/javascript" src="/js_plugins/jscolor/jscolor.js"></script>

<header>
  <h2 class="left">車款介紹</h2>
  <nav class="left">
    <%= link_to "簡介", edit_admin_category_vehicle_path(@vehicle.category, @vehicle), class: 'active' %>
    <%= link_to "輪播", admin_category_vehicle_slider_path(@vehicle.category, @vehicle)%>
    <%= link_to "車色", admin_category_vehicle_colors_path(@vehicle.category, @vehicle)%>
    <%= link_to "特色", admin_category_vehicle_features_path(@vehicle.category, @vehicle)%>
    <%= link_to "規格", admin_category_vehicle_specs_path(@vehicle.category, @vehicle)%>
    <%= link_to "配件", admin_category_vehicle_accessories_path(@vehicle.category, @vehicle)%>
    <%= link_to "型錄", admin_category_vehicle_dm_path(@vehicle.category, @vehicle)%>
    <%= link_to "其他", admin_category_vehicle_photo_path(@vehicle.category, @vehicle)%>
  </nav>
  <div class="explain right"><p>圖片尺寸：330 * 400</p></div>
</header>

<article>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  
  
    <%= simple_form_for(@vehicle, :url => admin_category_vehicle_path(params[:category_id] , @vehicle), html: { id: "patchthisvehicle", :multipart => true } ) do |f| %>  

    <% if @gallery_count > 0 %>
      <%= render 'admin/common/show_by_type', target: @vehicle, target_title: '封面', type: 'VehicleCover' %>
    <% else %>
      <%= render 'admin/common/upload_by_type', target_title: '封面' %>
    <% end %>

    <div class='form'>
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
       <tr>
          <td width="9%">名稱：</td>
          <td width="39%">
            <%= f.input_field :name, required: true , class: 'text' %>
          </td>
          <td width="4%">&nbsp;</td>
          <td width="9%">顏色：</td>
          <td width="39%">
            <%= f.input_field :title_color, class: 'color text', required: true %>
          </td>           
        </tr>
        <tr>
          <td valign="top">描述：</td>
          <td colspan="4">
            <%= f.text_area :description %>
          </td>
        </tr>
         <tr>
          <td valign="top">CF：</td>
          <td colspan="4">
            <%= f.text_area :cf %>
          </td>
        </tr>
      </table>   
    </div>

    <div class="button"> 
      <%= link_to admin_category_path(@vehicle.category) , class: 'left' do %>
        <img src="/images/admin/left.png">返回
      <% end %>
      <%= f.submit '儲存', class: 'highlight right' %>
    </div>

  <% end %>

</article>



