BusinessContact
  <article>
    <div class="form">
      <%= form_for(@contact, :url => contacts_path(), html: { id: "newthiscontact" } ) do |f| %>
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="7%">商品：</td>
            <td width="31%">
              主旨：<br>
              <% @options.each do | option | %>
                <%= f.radio_button :subject, option[0] %>
                <label for='<%= "contact_subject_#{option[0]}" %>' ><%= option[1] %> </label>
              <% end %>
            </td>
            <td width="2%">&nbsp;</td>
            <td width="7%">顯示：</td>
            <td width="53%">
              姓名：<%= f.text_field :name, required: true %><br>
              電話：<%= f.text_field :phone, required: true %><br>
              email：<%= f.text_field :email, required: true %><br>
            </td>
          </tr>
          <tr>
            <td valign="top">內容：</td>
            <td colspan="4">
              內容：<%= f.text_area :content, id: "textarea", required: true %><br>
            </td>
          </tr>
          <tr>
            <td>
              <%= recaptcha_tags :display => { :theme => "clean" } %>
              <%= f.submit '送出' %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </article>